{
    "version": "0.1.0",
    "command": "dotnet",
    "isShellCommand": true,
    "args": [],
    "tasks": [
        {
            "taskName": "build",
            "args": [
                "${workspaceRoot}/gitnstats.sln"
            ],
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "test",
            "args": [],
            "isTestCommand": true
        },
        {
            "taskName": "coverage",
            "suppressTaskName": true,
            "args": [
                "test",
                "tests/gitnstats.test/gitnstats.test.csproj",
                "/p:CollectCoverage=true",
                "/p:Exclude=\"[gitnstats.core]*,[gitnstats.core.tests]*\"",
                "/p:CoverletOutput='./bin/'"
            ]
        },
        {
            "taskName": "coverage-core",
            "suppressTaskName": true,
            "args": [
                "test",
                "tests/gitnstats.core.tests/gitnstats.core.tests.csproj",
                "/p:CollectCoverage=true",
                "/p:CoverletOutput='./bin/'"
            ]
        }
    ]
}